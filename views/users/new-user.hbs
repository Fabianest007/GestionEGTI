<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Agregar Usuario</h3>
            <hr class="my-4">
            <form action="/api/user/new-user" method="POST">
                <div class="form-group">
                    <input type="text" name= "name" class="form-control" placeholder="Nombre">          
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" class="form-control" placeholder="Apellido">
                </div>
                <div class="form-group">
                    <input type="text" name="position" class="form-control" placeholder="rol">
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Email">
                </div>
                <div class=" form-group dropdown" >
                        <div  id="acceso">
                            <label>Nivel de acceso:</label>
                            <select name="accesslvl">
                            <option value="1">Nivel 1</option>
                            <option value="2">Nivel 2</option>
                            <option value="3">Nivel 3</option>
                            <option value="4">Nivel 4</option>
                            <option value="5">Nivel 5</option>
                            </select> 
                        </div>
                </div>
                <div class="form-group">
                <label><input type="checkbox" name="is_admin" id="is_admin" value="true"> Es administrador</label>
                </div>
                <div class="form-group">
                    <input type="password" name="passwd" class="form-control" placeholder="Clave Única">
                </div>
                <div class="form-group">
                    <input type="password" name="confPasswd" class="form-control" placeholder="Confirme Clave única">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block"> Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>