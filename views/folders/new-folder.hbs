<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Nueva Carpeta</h3>
    </div>
    <div class="card-body">
        <form action="/api/folder/new-folder/" method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Nombre" autofocus>
            </div>
            <div class="form-group">
                <input type="text" name="author" class="form-control" value="{{name}} {{lastname}}" readonly>
            </div>
            <div class="form-group">
                <input type="text" name="route" class="form-control" value="{{ruta}}" readonly>
                <input type="hidden" name="prev_folder" value="{{prev_folder}}" >
            </div>
            <div class=" form-group dropdown" >
                <div  id="acceso">
                            <label>Nivel de acceso:</label>
                            <select name="accesslvl">
                            {{#each levels}}
                            <option value="{{number}}">{{text}}</option>
                            {{/each}}
                            </select> 
                        </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary ">Crear Carpeta</button>
                <a class="btn btn-primary" href="/api/folder/home/{{prev_folder}}">Cancelar</a>
            </div>
        </form>
    </div>
</div>
</div>