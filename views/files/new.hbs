<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Subir Archivo</h3>
        </div>
        <div class="card-body">
            <form action="/api/file/new-file" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre del Archivo" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" value="{{name}} {{lastname}}" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="route" class="form-control" value="{{ruta}}" readonly>
                </div>
                <div class=" form-group dropdown" >
                        <div  id="acceso">
                            <label>Nivel de acceso:</label>
                            <select name="accesslvl">
                            {{#each levels}}
                            <option value="{{number}}">{{text}}</option>
                            {{/each}}
                            </select> 
                        </div>
                </div>
                <div  class="form-group">
                    <input type="file" name="file" />
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Breve descripciÃ³n"></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary "> Subir Archivo</button>
                    <a class="btn btn-primary" href="/api/folder/home/{{prev_folder}}">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
