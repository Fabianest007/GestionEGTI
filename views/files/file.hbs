<div class="col-md-8 m-auto">
    <div class="card">
        <div class="card-header text-center">
            <h1>Descripci칩n del Archivo</h1>
        </div>
        <div class="card-body">
            <div class="form-group">
                <h5 class="usuario">Nombre de Archivo: </h5>
                <input type="text" name="" class="form-control" value="{{file.name}}" readonly> 
            </div>
            <div class="form-group">
                <h5 class="usuario">Autor: </h5>
                <input type="text" name="author" class="form-control" value="{{file.author}}" readonly> 
            </div>
            <div class="form-group">
                <h5 class="usuario">Ruta del Archivo: </h5>
                <input type="text" name="route" class="form-control" value="{{file.route}}" readonly>
            </div>
            <div class="form-group">
                <h5 class="usuario">Fecha de Creaci칩n: </h5>
                <input type="text" name="date" class="form-control" value="{{file.creation_date}}" readonly>
            </div>
            <div class="form-group">
                <h5 class="usuario">Descripci칩n: </h5>
                <input type="text" name="description" class="form-control" value="{{file.description}}" readonly>
            </div>
            <div class="text-center">
                <div class="form-group">
                    <a href="/api/file/download/{{file._id}}" class="btn btn-primary "> Descargar</a>
                    <a href="/api/file/update/{{file._id}}" class="btn btn-primary "> Actualizar</a>
                </div>
            </div>
        </div>
        <div class="card-header">
            <h3 class="text-center">Versiones:</h3>
        </div>
        {{#each versions}}
            <div class="row-md-12">
                <svg xmlns="http://www.w3.org/2000/svg" width="44" height="64" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                </svg>
                <div class="float-right">
                    <a class="btn btn-dark" href="/api/file/version?info={{route}}|{{name}}" role="button">
                        <i class="fas fa-download"></i>
                    </a>
                </div>
                <label>{{name}}</label>
                <hr class="my-8">
            </div>
            {{else}}
                <p class="text-center lead"> No hay m치s versiones disponibles</p>
        {{/each}}
    </div>
</div>

