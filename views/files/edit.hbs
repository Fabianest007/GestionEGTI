<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Informacion de Archivo</h3>
        </div>
        <div class="card-body">
            <form action="/api/file/edit-file/{{file._id}}" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="newname" class="form-control" value="{{file.name}}" placeholder="Nombre del Archivo" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" value="{{file.author}}" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="route" class="form-control" value="{{file.route}}" readonly>
                </div>
                <div class=" form-group dropdown" >
                        <div  id="acceso">
                            <label>Nivel de acceso:</label>
                            <select name="newaccesslvl">
                            {{#each levels}}
                            <option value="{{number}}">{{text}}</option>
                            {{/each}}
                            </select> 
                        </div>
                </div>
                <div class="form-group">
                    <textarea name="newdescription" class="form-control" placeholder="Breve descripciÃ³n">{{file.description}}</textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary "> Editar</button>
                    <button type="reset" class="btn btn-primary ">Resetear</button>
                </div>
            </form>
        </div>
    </div>
</div>
