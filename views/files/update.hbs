<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Actualizar Archivo</h3>
        </div>
        <div class="card-body">
            <form action="/api/file/update-file/{{file._id}}" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="{{file.name}}" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="newauthor" class="form-control" value="{{name}} {{lastname}}" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="route" class="form-control" value="{{file.route}}" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="accesslvl" class="form-control" placeholder="Nivel {{file.accesslvl}}" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="newversion" class="form-control" placeholder="{{file.version}}" readonly>
                </div>
                <div  class="form-group">
                    <input type="file" name="file" />
                </div>
                <div class="form-group">
                    <textarea name="newdescription" class="form-control" placeholder="Breve descripciÃ³n"></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary "> Actualizar Archivo</button>
                    <button type="reset" class="btn btn-primary ">Resetear</button>
                </div>
            </form>
        </div>
    </div>
</div>
